{
    "templates": {
        "shop": {
            "layout": "master",
            "components": {
                "hero": {
                    "type": "hero",
                    "properties": {
                        "title": "Welcome to {{ shop.name }}!",
                        "subtitle": "{{ shop.description }}",
                        "cta": null,
                        "cta_text": null,
                        "show_searchbar": true,
                        "show_feedback_rating": true,
                        "show_products_sold": true,
                        "show_total_customers": true,
                        "alignment": "center",
                        "height": "medium",
                        "background_image": null,
                        "side_image": null
                    }
                },
                "products": {
                    "type": "products",
                    "properties": {
                        "title": "Shop",
                        "subtitle": null
                    }
                },
                "feedbacks": {
                    "type": "feedbacks",
                    "properties": {
                        "title": "Reviews",
                        "subtitle": null,
                        "amount": 4
                    }
                },
                "socials": {
                    "type": "socials",
                    "properties": {
                        "title": "Follow our Socials",
                        "subtitle": null
                    }
                }
            },
            "components_order": [
                "hero",
                "products",
                "feedbacks",
                "socials"
            ]
        },
        "product": {
            "layout": "master",
            "components": {
                "product-page": {
                    "type": "product-page",
                    "properties": []
                }
            },
            "components_order": [
                "product-page"
            ]
        },
        "feedback": {
            "layout": "master",
            "components": {
                "feedback-page": {
                    "type": "feedback-page",
                    "properties": []
                }
            },
            "components_order": [
                "feedback-page"
            ]
        },
        "terms": {
            "layout": "master",
            "components": {
                "terms-page": {
                    "type": "terms-page",
                    "properties": []
                }
            },
            "components_order": [
                "terms-page"
            ]
        },
        "status": {
            "layout": "master",
            "components": {
                "status-page": {
                    "type": "status-page",
                    "properties": []
                }
            },
            "components_order": [
                "status-page"
            ]
        },
        "embed-product": {
            "layout": "embed"
        }
    },
    "global": {
        "properties": {
            "theme_color": "#ff0000",
            "primary_background_color": "#000000",
            "secondary_background_color": "#121212db",
            "primary_border_color": "#000000",
            "secondary_border_color": "#000000",
            "font": "Poppins",
            "snow": false
        },
        "components": {
            "announcement": {
                "text": null,
                "link": null,
                "link_text": null
            },
            "navbar": {
                "show_shop_name": true,
                "show_logo": true,
                "left_links": [
                    {
                        "text": "Home",
                        "link": "\/",
                        "shape": "regular"
                    },
                    {
                        "text": "Products",
                        "link": "\/#products",
                        "shape": "regular"
                    },
                    {
                        "text": "Status",
                        "link": "\/status",
                        "shape": "regular"
                    },
                    {
                        "text": "Feedback",
                        "link": "\/feedback",
                        "shape": "regular"
                    }
                ],
                "right_links": [
                    {
                        "text": "Customer Panel",
                        "link": "\/customer",
                        "shape": "button"
                    }
                ]
            },
            "footer": {
                "show_shop_name": true,
                "show_logo": false,
                "show_socials": true,
                "links": [
                    {
                        "text": "Home",
                        "link": "\/"
                    },
                    {
                        "text": "Products",
                        "link": "\/#products"
                    },
                    {
                        "text": "Feedback",
                        "link": "\/feedback"
                    },
                    {
                        "text": "Status",
                        "link": "\/status",
                        "shape": "regular"
                    },
                    {
                        "text": "Terms of Service",
                        "link": "\/terms"
                    }
                ]
            }
        }
    }
}